<p id="notice"><%= notice %></p>

<h1>閲覧</h1>
  <p>
    <strong>物件名:</strong>
    <%= @property.name %>
  </p>

  <p>
    <strong>賃料:</strong>
    <%= @property.rent %><%="円"%>
  </p>

  <p>
    <strong>所在地:</strong>
    <%= @property.address %>
  </p>

  <p>
    <strong>築年数:</strong>
    <%= @property.age %><%="年"%>
  </p>

  <p>
    <strong>備考:</strong>
    <%= @property.remarks %>
  </p>

  <% n = 0 %>
    <% @property.near_stations.each do |station|%>
        <h3>最寄り駅<%= n += 1 %></h3>
          <p>路線名:<%= station.route_name %></p>
          <p>駅名：<%= station.station_name %></p>
          <p>徒歩分数：<%= station.minutes %>分</p>
    <% end %>

<%= link_to '編集', edit_property_path(@property) %> |
<%= link_to '戻る', properties_path %>
